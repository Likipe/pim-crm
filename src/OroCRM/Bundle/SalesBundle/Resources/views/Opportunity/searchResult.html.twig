{#
    Available variables:
    * entity       - user entity OroCRM\Bundle\SalesBundle\Entity\Opportunity or null
    * indexer_item - indexer item Oro\Bundle\SearchBundle\Query\Result\Item
#}
{% extends 'OroSearchBundle:Search:searchResultItem.html.twig' %}
{% import 'OroLocaleBundle::macros.html.twig' as Locale %}

{% set format = oro_config_value('oro_locale.name_format') %}
{% set showImage = false %}

{% set recordUrl = indexer_item.recordUrl %}
{% set title = entity ? entity.__toString : indexer_item.recordTitle %}

{% set entityType = 'Opportunity'|trans %}

{% set entityInfo = [
    {'title': 'Created', 'value': entity.createdAt ? Locale.time(entity.createdAt) : 'N/A'},
    {'title': 'Updated', 'value': entity.updatedAt ? Locale.time(entity.updatedAt) : 'N/A'},
] %}
